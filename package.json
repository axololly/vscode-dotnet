{
    "name": "dotnet-release",
    "displayName": ".NET Core Tools - On Release",
    "description": "Fast way to build, run and test .NET Core (C#, F#) project (in release mode).\n\nTaken from formulahendry's extension.",
    "version": "0.0.4",
    "publisher": "axololly",
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "dotnet",
        "Dot Net",
        "csharp",
        "fsharp",
        ".NET Core"
    ],
    "main": "./out/extension",
    "activationEvents": [],
    "contributes": {
        "commands": [
            {
                "command": "dotnet.build",
                "title": "Build .NET Core project"
            },
            {
                "command": "dotnet.run",
                "title": "Run .NET Core project"
            },
            {
                "command": "dotnet.watch",
                "title": "Watch .NET Core project"
            },
            {
                "command": "dotnet.test",
                "title": "Execute .NET Core tests"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceExtname == .csproj",
                    "command": "dotnet.build",
                    "group": "navigation@1"
                },
                {
                    "when": "resourceExtname == .csproj",
                    "command": "dotnet.run",
                    "group": "navigation@2"
                },
                {
                    "when": "resourceExtname == .csproj",
                    "command": "dotnet.watch",
                    "group": "navigation@3"
                },
                {
                    "when": "resourceExtname == .csproj",
                    "command": "dotnet.test",
                    "group": "navigation@4"
                },
                {
                    "when": "resourceExtname == .fsproj",
                    "command": "dotnet.build",
                    "group": "navigation@1"
                },
                {
                    "when": "resourceExtname == .fsproj",
                    "command": "dotnet.run",
                    "group": "navigation@2"
                },
                {
                    "when": "resourceExtname == .fsproj",
                    "command": "dotnet.watch",
                    "group": "navigation@3"
                },
                {
                    "when": "resourceExtname == .fsproj",
                    "command": "dotnet.test",
                    "group": "navigation@4"
                },
                {
                    "when": "resourceExtname == .sln",
                    "command": "dotnet.build",
                    "group": "navigation@1"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": ".NET Core Tools",
            "properties": {
                "dotnet.enableTelemetry": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable anonymous usage collection."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "applicationinsights": "^1.0.0"
    }
}
